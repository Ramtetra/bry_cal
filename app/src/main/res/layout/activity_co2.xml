<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    tools:context=".DuctulatorActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar"/>

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="6"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/shape_border_radius"
            android:layout_width="0dp"
            android:layout_height="75dp">

            <ImageView
                android:paddingTop="5dp"
                android:src="@drawable/psycal_icon"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="@string/psycal"
                android:textColor="@color/heading_color"
                android:textSize="8sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border_radius"
            android:layout_width="0dp"
            android:layout_height="75dp">

            <ImageView
                android:src="@drawable/mixed_air_icon"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="@string/mixed_air_conditions"
                android:textColor="@color/heading_color"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border_radius"
            android:layout_width="0dp"
            android:layout_height="75dp">

            <ImageView
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:src="@drawable/unit_converter_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="@string/unit_converter"
                android:textColor="@color/heading_color"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/converter"
                android:textColor="@color/heading_color"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout4"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border_radius"
            android:layout_width="0dp"
            android:layout_height="75dp">

            <ImageView
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:src="@drawable/ductulator_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="@string/ductulator"
                android:textColor="@color/heading_color"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout5"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border_radius_active"
            android:layout_width="0dp"
            android:layout_height="75dp">

            <ImageView
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:src="@drawable/co2_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="@string/co2"
                android:textColor="@color/heading_color"
                android:textSize="8sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:orientation="vertical"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border_radius"
            android:layout_width="0dp"
            android:layout_height="75dp">

            <ImageView
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:src="@drawable/weather_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:text="@string/weather_bin_data"
                android:textColor="@color/heading_color"
                android:textSize="8sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="30dp"
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_marginTop="170dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp"
            android:paddingBottom="20dp"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:background="@color/dark_blue"
                android:layout_width="150dp"
                android:padding="7dp"
                android:text="INPUT"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
           <LinearLayout
               android:orientation="vertical"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:weightSum="4"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_weight="1"
                       android:fontFamily="@font/poppins_medium"
                       android:text="@string/total_electric"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:layout_weight="1"
                       android:paddingLeft="5dp"
                       android:gravity="center"
                       android:fontFamily="@font/poppins_medium"
                       android:text="@string/service_factor"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_weight="1"
                       android:gravity="center"
                       android:fontFamily="@font/poppins_medium"
                       android:text="@string/running_hrs"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

                   <TextView
                       android:layout_weight="1"
                       android:gravity="center"
                       android:fontFamily="@font/poppins_medium"
                       android:text="@string/no_of_work"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

               </LinearLayout>


              <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                  android:weightSum="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et1"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_edittext_rounded"
                    android:layout_width="80dp"
                    android:layout_height="45dp"/>

                  <EditText
                      android:id="@+id/et2"
                      android:layout_weight="1"
                      android:inputType="numberDecimal"
                      android:layout_marginTop="10dp"
                      android:padding="5dp"
                      android:layout_marginRight="10dp"
                      android:background="@drawable/shape_edittext_rounded"
                      android:layout_width="80dp"
                      android:layout_height="45dp"/>
                  <EditText
                      android:id="@+id/et3"
                      android:layout_weight="1"
                      android:inputType="numberDecimal"
                      android:layout_marginTop="10dp"
                      android:padding="5dp"
                      android:layout_marginRight="10dp"
                      android:background="@drawable/shape_edittext_rounded"
                      android:layout_width="80dp"
                      android:layout_height="45dp"/>

                  <EditText
                      android:id="@+id/et4"
                      android:layout_weight="1"
                      android:inputType="numberDecimal"
                      android:layout_marginTop="10dp"
                      android:padding="5dp"
                      android:layout_marginRight="10dp"
                      android:background="@drawable/shape_edittext_rounded"
                      android:layout_width="80dp"
                      android:layout_height="45dp"/>

            </LinearLayout>
           </LinearLayout>

         <ImageView
             android:layout_marginTop="20dp"
             android:layout_gravity="center"
             android:src="@drawable/co2_icon_main"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                   <!-- <LinearLayout
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_rectangel_green"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:text="Result"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>-->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:hint="@string/region"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layoutMotorType">

                        <AutoCompleteTextView
                            android:id="@+id/etRegion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="none"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/total_kwh_consume"
                        app:layout_constraintTop_toBottomOf="@+id/layoutProjectName">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etKwhConsume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_weight="1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/co2_commission"
                        app:layout_constraintTop_toBottomOf="@+id/layoutProjectName">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCo2Commision"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textSize="15sp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>